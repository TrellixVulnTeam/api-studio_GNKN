<%- include ('../partials/header'); %>
<section class="section breadcrumbs-custom">
  <div class="breadcrumbs-custom-main bg-image bg-primary">
    <div class="container">
      <h3 class="breadcrumbs-custom-title">Anunciar un trabajo</h3>
    </div>
  </div>
  <div class="breadcrumbs-custom-aside">
    <div class="container">
      <ul class="breadcrumbs-custom-path">
        <li><a href="/">Inicio</a></li>
        <li class="active">Anunciar trabajo</li>
      </ul>
    </div>
  </div>
</section>
<section class="section section-md">
  <div class="container">
    <div class="block-form">
      <form id="post-a-job-form" method="post" action="/anuncio-trabajo/nuevo">
        <h4> Información General </h4>
        <hr>
        <!-- RD Mailform-->
        <div class="rd-form rd-mailform form-lg">
          <div class="row row-40">
            <div class="col-md-12">
              <div class="form-wrap">
                <label class="form-label-outside" for="general-information-job-title">
                  Proyecto
                </label>
                <div class="form-wrap-inner">
                  <input class="form-input" id="general-information-job-title" form="post-a-job-form" type="text"
                    name="titulo_trabajo" data-constraints="@Required">
                  <label class="form-label" for="general-information-job-title">Ingrese título</label>
                </div>
              </div>
            </div>
            <!--
              <div class="col-md-">
              <div class="form-wrap">
                <label class="form-label-outside" for="general-information-email">Email</label>
                <div class="form-wrap-inner">
                  <% if (usuario){ %>
                  <input class="form-input" id="general-information-email" form="post-a-job-form" type="email"
                    name="" value="<%=usuario.email%>" disabled="disable">
                  <input type="hidden", name='email', value="<%=usuario.email%>">
                  <label class="form-label" for="general-information-email">Email</label>
                  <% } %>
                </div>
              </div>
            </div>
            -->
            <div class="col-md-6">
              <div class="form-wrap">
                <label class="form-label-outside" for="general-information-job-type">
                  Tipo de empleo
                </label>
                <div class="form-wrap-inner">
                  <!-- Select 2-->
                  <select class="form-input select" id="general-information-job-type" form="post-a-job-form"
                    data-placeholder="Select Job Type" name="tipo_trabajo" data-minimum-results-for-search="Infinity"
                    data-constraints="@Selected" data-constraints="@Required">
                    <option label="Seleccionar tipo de trabajo"></option>
                    <option value="Tiempo Completo">Tiempo completo</option>
                    <option value="Medio Tiempo">Medio tiempo</option>
                    <option value="Freelancer">Freelancer</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-wrap">
                <label class="form-label-outside" for="general-information-location">Ubicación</label>
                <div class="form-wrap-inner">
                  <input class="form-input" id="general-information-location" form="post-a-job-form" type="text"
                    name="ubicacion" data-constraints="@Required">
                  <label class="form-label" for="general-information-location"></label>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-wrap">
                <label class="form-label-outside" for="general-information-salary">Salario</label>
                <div class="form-wrap-inner">
                  <input class="form-input" id="general-information-salary" form="post-a-job-form" type="text"
                    name="salario" data-constraints="@Required">
                  <label class="form-label" for="general-information-salary">ejemplo 20000 Moneda a Utilizar 'Dolares'</label>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-wrap">
                <label class="form-label-outside" for="general-information-job-category">
                  Categoría de Trabajo
                </label>
                <div class="form-wrap-inner">
                  <!-- Select 2-->
                  <select class="form-input select" id="general-information-job-category" form="post-a-job-form"
                    data-placeholder="Choose a Category" name="cat_trabajo" data-minimum-results-for-search="Infinity"
                    data-constraints="@Selected" data-constraints="@Required">
                    <option label="Elije una Categoría"></option>
                    <option value="Tiempo Completo">Diseño Gráfico</option>
                    <option value="Medio Tiempo">Traducciones</option>
                    <option value="Freelancer">Edición de Imágenes</option>
                    <option value="Tiempo Completo">Desarrollador Web</option>
                    <option value="Medio Tiempo">Desarrollador Movil</option>
                    <option value="Freelancer">Desarrollador de Software</option>
                    <option value="Tiempo Completo">Soporte Administrativo</option>
                    <option value="Medio Tiempo">Consultoría y Contabilidad</option>
                    <option value="Freelancer">Marketing Online</option>
                    <option value="Freelancer">Otros</option>                    
                     <!-- <% categorias.forEach(function(categoria){ %>
                    <option value="<%=categoria.nombre%>"><%=categoria.nombre%></option>
                    <% }) %>  -->
               
                  
                  </select>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-wrap">
                <label class="form-label-outside" for="general-information-tags">
                  Etiquetas de trabajo (opcional)
                </label>
                <div class="form-wrap-inner">
                  <input class="form-input" id="general-information-tags" form="post-a-job-form" type="text"
                    name="etiqueta">
                  <label class="form-label" for="general-information-tags">ejemplo “Web Designer”</label>
                </div>
               
                
              </div>
              
            </div>
            <div class="col-md-6">
              <div class="form-wrap">
                <label class="form-label-outside" for="general-information-url">URL (s) (opcional)</label>
                <div class="form-wrap-inner">
                  <input class="form-input" id="general-information-url" form="post-a-job-form" type="text" name="url">
                  <label class="form-label" for="general-information-url">Enter URL</label>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-warp">
                <label class="form-label-outside" for="general-information-tags">
                  Responsabilidades del cargo 
                </label>
                <div class="form-wrap-inner">
                  <input class="form-input" id="general-information-tags" form="post-a-job-form" type="text"
                    name="resp_">
                  <label class="form-label" for="general-information-tags">#</label>
                </div>
                <label class="form-label-outside" for="general-information-tags">
                  Responsabilidades del cargo 
                </label>
                <div class="form-wrap-inner">
                  <input class="form-input" id="general-information-tags" form="post-a-job-form" type="text"
                    name="resp_1">
                  <label class="form-label" for="general-information-tags">#</label>
                </div>
                <label class="form-label-outside" for="general-information-tags">
                  Responsabilidades del cargo 
                </label>
                <div class="form-wrap-inner">
                  <input class="form-input" id="general-information-tags" form="post-a-job-form" type="text"
                    name="resp_2">
                  <label class="form-label" for="general-information-tags">#</label>
                </div><label class="form-label-outside" for="general-information-tags">
                  Responsabilidades del cargo 
                </label>
                <div class="form-wrap-inner">
                  <input class="form-input" id="general-information-tags" form="post-a-job-form" type="text"
                    name="resp_3">
                  <label class="form-label" for="general-information-tags">#”</label>
                </div>
              </div>
            </div>
            <div class="col-12">
              <div class="form-wrap">
                <label class="form-label-outside" for="general-information-description">
                  Descripción
                </label>
                <div class="form-wrap-inner">
                  <label class="form-label" for="general-information-description">
                    Proporcione una descripción completa del trabajo
                  </label>
                  <textarea class="form-input" id="general-information-description" form="post-a-job-form"
                    name="descripcion" data-constraints="@Required"></textarea>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div>
          <br>
          <button class="button button-block button-primary">Publicar</button>
        </div>
      </form>
    </div>
  </div>
</section>
<%- include('../partials/footer') %>