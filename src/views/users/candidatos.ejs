<%- include ('../partials/header'); %>
  <div class="container-margin">
    <section class="section breadcrumbs-custom">
      <div class="breadcrumbs-custom-main bg-image bg-primary">
        <div class="container">
          <h3 class="breadcrumbs-custom-title">Buscador de Freelancers</h3>
        </div>
      </div>
      <div class="breadcrumbs-custom-aside">
        <div class="container">
          <ul class="breadcrumbs-custom-path">
            <li><a href="/">Inicio</a></li>
            <li class="active">Freelancer</li>
          </ul>
        </div>
      </div>
    </section>
    <section class="section section-md">
      <div class="container">
        <form class="form-layout-search form-lg" method="GET" action="/candidatos/1">
          <div class="form-wrap form-wrap-icon">
            <input class="form-input" id="form-name" type="text" name="buscar_free" data-constraints="@Required">
            <label class="form-label" for="form-name"></label><span class="icon fl-bigmug-line-search74"></span>
          </div>
  
          <div class="form-wrap form-wrap-button">
            <button class="button button-lg button-primary" type="submit">Buscar</button>
          </div>
        </form>
        <div class="row row-50 flex-lg-row-reverse">
          <div class="col-lg-4 col-xl-3">
            <div class="row row-30">
  
            </div>
          </div>
          <div class="col-md-12">
            <!-- Profile Minimal-->
            <% applicant.forEach(function(applicant){ %>
              <article class="profile-minimal">
                <div class="profile-minimal-inner">
                  <div class="profile-minimal-main-outer">
                    <div class="profile-minimal-main"><img class="profile-minimal-image"
                        src="images/candidates-1-101x96.jpg" alt="" width="101" height="96" />
                      <div class="profile-minimal-main-info">
                        <h5 class="profile-minimal-name"><a href="/perfil-user/<%= applicant.id%>">
                            <%= applicant.username%>
                          </a></h5>
                        <p>$50000 p.a. minimum</p>
                        <p class="profile-minimal-position">Junior Web Designer</p>
                      </div>
                    </div>
                  </div>
                  <div class="profile-minimal-meta">
  
                    <a class="button button-primary" href="/perfil-user/<%= applicant.id%>" style="
                            border-radius: 10px 10px 10px 10px;
                            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.5);">Ver Perfil</a>
  
                    <a class="button button-primary" href="#" style="
                            border-radius: 10px 10px 10px 10px;
                            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.5);">Contactar</a>
                  </div>
                </div>
              </article>
              <% }) %>
                <!-- Paginacion -->
                <!-- Inicio Paginacion -->
                <div class="row">
                  <% if(pages) { %>
                    <nav class="mx-auto">
                      <ul class="pagination">
                      <!-- Primera Pagina -->
                       <% if(current==1) { %>
                        <li class="page-item disabled">
                          <a href="" class="page-link">Primera Pagina</a>
                        </li>
                        <% } else { %>
                          <li class="page-item">
                            <a href="/candidatos/1" class="page-link">Primera Pagina</a>
                          </li>
                        <% } %>
                      <!--Paginas-->
                          <% var i=(Number(current)> 5 ? Number(current) - 4 : 1) %>
                            <% if(i !==1) { %>
                              <li class="page-item disabled">
                                <a class="page-link" href="#">...</a>
                              </li>
                            <% } %>
                            <% for(; i <=(Number(current) + 4) && i <=pages; i++) { %>
                              <% if(i==current) { %>
                                <li class="page-item active">
                                  <a class="page-link" href="/candidatos/<%= i %>">
                                    <%= i %>
                                  </a>
                                </li>
                                  <% } else { %>
                                    <li class="page-item">
                                      <a class="page-link" href="/candidatos/<%= i %>">
                                        <%= i %>
                                      </a>
                                    </li>
                                  <% } %>
                                      <% if (i==Number(current) + 4 && i < pages) { %>
                                        <li class="page-item disabled">
                                          <a class="page-link" href="#">...</a>
                                        </li>
                                        <% } %>
                           <% } %>
                          <!--Ultima Pagina-->
                          <% if(current==pages){ %>
                            <li class="page-item disabled">
                              <a href="" class="page-link">Ultima Pagina</a>
                            </li>
                          <% } else { %>
                            <li class="page-item">
                              <a href="/candidatos/<%= pages %>">Ultima Pagina</a>
                            </li>
                          <% } %>
                      </ul>
                    </nav>
                    <% } %>
                </div>
                <!-- Fin Paginacion -->
          </div>
        </div>
    </section>
  </div>
  <%- include('../partials/footer') %>